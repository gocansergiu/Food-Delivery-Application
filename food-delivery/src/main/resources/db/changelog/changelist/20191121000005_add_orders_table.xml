<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="20191121000005" author="marius.butaciu" >
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders" schemaName="public"/>
            </not>
        </preConditions>
        <createTable tableName="orders">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="id_user" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="id_restaurant" type="bigint">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="id_user"
                                 baseTableName="orders"
                                 baseTableSchemaName="public"
                                 constraintName="fk_orders_users"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"
                                 referencedTableSchemaName="public"/>
        <addForeignKeyConstraint baseColumnNames="id_restaurant"
                                 baseTableName="orders"
                                 baseTableSchemaName="public"
                                 constraintName="fk_orders_restaurant"
                                 deferrable="true"
                                 initiallyDeferred="true"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="restaurant"
                                 referencedTableSchemaName="public"/>
    </changeSet>
</databaseChangeLog>